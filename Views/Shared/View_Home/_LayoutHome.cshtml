<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Styles/StylesHome.css" rel="stylesheet"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
        
    <div class="position-relative">
        <div class="navbar">
            <a href="/Home/Home"><img class="logo" src="~/Content/hinh/logo_fly.png" /></a>
            <ul>
                <li><a href="/Home/AboutUs">About Us</a></li>
                <li><a href="/Home/Contact">Contact</a></li>
                <li><a href="#">News</a></li>
                <li><a href="/Login/Login">Account</a></li>
            </ul>
        </div>
        <img src="~/Content/hinh/flight3.jpg" class="img-fluid d-non d-xl-block" />
        <div class="d-non d-xl-block position-absolute start-50 top-50 translate-middle">
            <div class="round p-3 bg-cp" style="width:1200px">
                <div class="d-flex align-item-center">
                    <div class="form-check" style="margin:10px">
                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                        <label class="form-check-label fw-bold fs-7" for="flexRadioDefault1">
                            Return
                        </label>
                    </div>
                    <div class="form-check" style="margin:10px">
                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                        <label class="form-check-label fw-bold fs-7" for="flexRadioDefault2">
                            One Way
                        </label>
                    </div>
                </div>
                <div class="d-flex align-item-center" style="margin:10px">
                    <div style="margin:10px">
                        <label for="exampleDataList" class="form-label fw-bold fs-8 m-0">To</label>
                        <input class="form-control" list="datalistOptions" id="exampleDataList" placeholder="Airport or City">
                        <datalist id="datalistOptions">
                            <option value="San Francisco">
                            <option value="New York">
                            <option value="Seattle">
                            <option value="Los Angeles">
                            <option value="Chicago">
                        </datalist>
                    </div>
                    <div style="margin:10px">
                        <label for="exampleDataList1" class="form-label fw-bold fs-8 m-0">From</label>
                        <input class="form-control" list="datalistOptions" id="exampleDataList" placeholder="Airport or City">
                        <datalist id="datalistOptions1">
                            <option value="San Francisco">
                            <option value="New York">
                            <option value="Viet Nam">
                            <option value="Thai Lan">
                            <option value="Canada">
                        </datalist>
                    </div>
                    <div style="margin:10px">
                        <label class="Depart" >Depart</label>
                        <input type="date" name="" id="" class="form-control" />
                    </div>
                    <div style="margin:10px">
                        <label class="Return">Return</label>
                        <input type="date" name="" id="" class="form-control" />
                    </div>
                    <div style="margin:10px">
                        <label>Cabin Class & Traveller</label>
                        <select class="form-select" aria-label="Default select example">
                            <option selected>Open this select menu</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                    <button  class="bnt bnt-drark fw-bold" style="margin:10px; margin-top:32px ;width:150px; height:40px">Search Flight</button>
                </div>
            </div>
        </div>
    </div>


    <!-- footer section starts  -->
    <div class="footer">
        <div class="box-container">
            <div class="box">
                <h3>ABOUT US</h3>
                <a href="#"> <i></i> Career </a>
                <a href="#"> <i></i> New </a>
                <a href="#"> <i></i> Terms of use </a>
                <a href="#"> <i></i> Privacy policy </a>
            </div>
            <div class="box">
                <h3>SUPPORT</h3>
                <a href="#"> <i ></i> Feedback </a>
                <a href="#"> <i ></i> Travel advisories </a>
                <a href="#"> <i ></i> Passenger rights </a>
                <a href="#"> <i ></i> Site map </a>
            </div>
            <div class="box">
                <h3>SERVICES</h3>
                <a href="#"> <i ></i> Corporate travel </a>
                <a href="#"> <i ></i> For travel agency </a>
                <a href="#"> <i ></i> Gift setificates </a>
                <a href="#"> <i ></i> Travel insuarance </a>
            </div>
        </div>
    </div>
    <!-- footer section ends -->

    <div>
        @RenderBody()
    </div>
</body>
</html>
